@model CRM.Models.Customer

<h4>Customer Detail</h4>
<hr />
@using (Html.BeginForm("Edit", "Customer", FormMethod.Post))
{
	<div class="form-group">
		<input type="submit" class="btn btn-default" value="Edit" formaction="/Customer/edit/@Model.CustomerId"/>
		<input type="submit" class="btn btn-default" value="Add Address" formaction="/Customer/AddAddress" />
		<input type="submit" class="btn btn-default" value="Delete" formaction="/Customer/delete/@Model.CustomerId" />
		
	</div>
	<hr />
	<div class="form-group">
		<label for="module-customer-edit-customerid">Customer Id:</label>
		@Html.TextBoxFor(m => m.CustomerId, new { @class = "form-control", @id = "module-customer-edit-customerid", @readonly = "readonly" })
	</div>
	<div class="form-group">
		<label for="module-customer-edit-companyname">Company Name:</label>
		@Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @id = "module-customer-edit-companyname", @readonly = "readonly" })
	</div>
	<div class="form-group">
		<label for="module-customer-edit-contactname">Contact Name:</label>
		@Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @id = "module-customer-edit-contactname", @readonly = "readonly" })
	</div>
	<div class="form-group">
		<label for="module-customer-edit-country">Country:</label>
		@Html.TextBoxFor(m => m.Country, new {@class = "form-control", @id = "module-customer-edit-country", @readonly = "readonly"})
	</div>
	<div class="form-group">
		<label>Addresses</label>
		<table class="table table-condensed">

			@foreach (var address in Model.Addresses)
			{
				<tr>
					<td>
						@Html.Raw(address.AddressGlobalName) (@Html.Raw(address.AddressId))
					</td>
					<td>
						<input type="submit" class="btn btn-default pull-right" value="Edit" formaction="/Customer/EditAddress/@address.AddressId" />
					</td>
				</tr>
			}
		</table>
	</div>


}
